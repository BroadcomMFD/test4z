$$JOBCARD
//****************************************************
//* EXECUTE DB2 UTILITY PROGRAM DSNTEP2
//* CHANGE UNIQUE INDEX PART IF AUTOMATING THIS JCL
//****************************************************
//STEP1    EXEC PGM=PTLDRIVM,REGION=4M,PARM='EP=BPLBCTL,'
//*
//STEPLIB  DD DISP=SHR,DSN=PTIPROD.RD200.PRD.CDBALOAD
//         DD DISP=SHR,DSN=$$subsystem.PRIVATE.SDSNEXIT
//         DD DISP=SHR,DSN=DB2.DB2C10.GA.RSU2112.SDSNLOAD
//*
//PTILIB   DD DISP=SHR,DSN=PTIPROD.RD200.PRD.CDBALOAD
//         DD DISP=SHR,DSN=$$subsystem.PRIVATE.SDSNEXIT
//         DD DISP=SHR,DSN=DB2.DB2C10.GA.RSU2112.SDSNLOAD
//*
//PTIPARM  DD DISP=SHR,DSN=PTIPROD.RD200.PRD.CDBAPARM
//*
//SYSOUT   DD SYSOUT=*
//UTPRINT  DD SYSOUT=*
//ABNLIGNR DD DUMMY
//BPIIPT   DD   *
.CONTROL +
 LOGID($$subsystem) UNIT(SYSDA)
.LIST SYSOUT(A)
.OPTION NOERRORS
.CONNECT $$subsystem


-- TEST FOR NON_UTS SEGMENTED TABLESPACE
--SET CURRENT APPLICATION COMPATIBILITY = 'V12R1M505';
SET CURRENT SQLID = '$$SQLID';
--
.OPTION SQLERRORS
DROP DATABASE $$dbname;
DROP STOGROUP $$sto;
.OPTION NOSQLERRORS
--
COMMIT;
--
  CREATE STOGROUP $$sto
  VOLUMES ('*')
  VCAT $$subsystem;
--
CREATE DATABASE $$dbname
STOGROUP $$sto;
--
CREATE TABLESPACE $$tablespace IN $$dbname
 CCSID EBCDIC COMPRESS YES BUFFERPOOL BP1;
-- <TABLE_DDL>
CREATE TABLE $$SQLID.$$tablename(
  CUST_NAME     CHAR(20)        NOT NULL
 ,CUST_ADDR  CHAR(20)    NOT NULL
 ,ACCOUNT_NUMBER CHAR(12)    NOT NULL
 ,PRODUCT_TYPE  CHAR(1)    NOT NULL
 ,TOTAL_CHECKS INTEGER       NOT NULL
 ,ACTUAL_CHECKS INTEGER       NOT NULL
 ,NOTIFICATION_DATE DATE          NOT NULL
 ,REORDER_DATE DATE          NOT NULL
 ,REORDERED  CHAR(1)    NOT NULL
 )
 IN $$dbname.$$tablespace;
-- </TABLE_DDL>
  CREATE UNIQUE INDEX $$SQLID.UJQHST7Z
                   ON $$SQLID.$$tablename
                       (ACCOUNT_NUMBER    ASC)
                   USING STOGROUP $$sto
                   ERASE NO
--                 BUFFERPOOL BP0
                   CLOSE NO;

COMMIT;
